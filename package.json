{
  "private": false,
  "name": "homebridge-gsh",
  "displayName": "Homebridge Google Smart Home",
  "version": "3.0.0",
  "description": "Google Smart Home",
  "license": "GPL-3.0",
  "author": "oznu <dev@oz.nu>",
  "repository": {
    "url": "git+https://github.com/homebridge-plugins/homebridge-gsh.git"
  },
  "bugs": {
    "url": "https://github.com/homebridge-plugins/homebridge-gsh/issues"
  },
  "main": "dist/index.js",
  "scripts": {
    "watch": "nodemon",
    "watch:ui": "npm run start --prefix homebridge-ui/public",
    "build": "rimraf dist && npm run build:plugin && npm run build:ui",
    "build:plugin": "tsc",
    "build:ui": "npm run build --prefix homebridge-ui/public",
    "lint": "eslint --ext .ts --max-warnings=0 .",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "homebridge": "^1.6.0 || ^2.0.0-beta.0",
    "node": "^18.20.4 || ^20.15.1 || ^22.0.0"
  },
  "keywords": [
    "homebridge-plugin",
    "google smart home",
    "google-smart-home",
    "google home",
    "google-home",
    "google assistant",
    "google-assistant",
    "google",
    "android",
    "homebridge",
    "gsh"
  ],
  "bundledDependencies": [
    "@homebridge/hap-client",
    "@homebridge/ws-connect",
    "fs-extra",
    "rxjs"
  ],
  "dependencies": {
    "@homebridge/hap-client": "^2.0.2",
    "@homebridge/ws-connect": "^3.0.0-beta.0",
    "chalk": "^5.3.0",
    "fs-extra": "^11.2.0",
    "rxjs": "^7.8.1",
    "semver": "^7.6.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.7.9",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "actions-on-google": "^3.0.0",
    "eslint": "^9.13.0",
    "hap-nodejs": "^1.1.0",
    "homebridge": "^1.8.4",
    "nodemon": "^3.1.7",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [],
    "exec": "tsc && DEBUG= homebridge -U ./test/hbConfig -T -D -I",
    "signal": "SIGTERM",
    "env": {
      "NODE_OPTIONS": "--trace-warnings"
    }
  },
  "bundleDependencies": [
    "@oznu/ws-connect",
    "fs-extra",
    "hap-node-client",
    "rxjs"
  ]
}